{% extends "layout.twig" %}
{% block title %} Tienda – uoMusic {% endblock %}
{% block main_container %}

    <!-- Búsqueda -->
    <div class="row">
        <div id="custom-search-input">
            <form method="get" action="/shop">
                <div class="input-group col-xs-8 col-sm-6 col-md-4 col-lg-5 pull-right">
                    <input id="search" type="text" class="search-query form-control"
                           placeholder="Nombre de la canción" name="search"/>
                    <span class="input-group-btn">
                        <button class="btn" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>

    <h2>Canciones</h2>

    <div class="row">

        {% for song in songs %}
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
                <div style="width:200px">
                    <a href="/songs/{{ song._id }}">
                        <img src="/covers/{{ song._id }}.png" alt="logo"/>
                        <div>{{ song.title }}</div>
                        <div class="small">{{ song.author }}</div>
                        <div class="text-right">{{ song.price }} €</div>
                    </a>
                    <form action="/songs/favorites/add/{{ song._id }}" method="post">
                        <input type="hidden" name="title" value="{{ song.title }}">
                        <input type="hidden" name="price" value="{{ song.price }}">
                        <button class="btn btn-primary btn-sm" type="submit">Añadir a favoritos</button>
                    </form>

                    <!-- Formulario para añadir comentario -->
                    <form action="/songs/comments/add/{{ song._id }}" method="post" style="margin-top:10px;">
                        <div class="form-group">
                            <textarea class="form-control" name="text" placeholder="Escribe tu comentario" rows="2"></textarea>
                        </div>
                        <button class="btn btn-secondary btn-sm" type="submit">Enviar comentario</button>
                    </form>
                </div>
            </div>
        {% endfor %}

    </div>

    <!-- Paginación: mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Anterior</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
        </ul>
    </div>
{% endblock %}
